# Caddyfile для AI Drone Creator Website
:8080

# Раздаём статические файлы
root * /app

# Все запросы на index.html
file_server {
    hide .git
    hide Caddyfile
}

# Health check endpoint
handle /health {
    respond 200 {
        body "{\"status\":\"healthy\",\"service\":\"AI Drone Creator Website\"}"
    }
}

# Если файл не найден - показываем index.html
try_files {path} /index.html

# Логирование
log {
    output stdout
    format console
}
