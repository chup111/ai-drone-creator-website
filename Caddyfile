:8080

# Указываем явно корневую директорию
root * /usr/share/caddy

# Раздаём статические файлы
file_server {
    hide .git
    hide Caddyfile
}

# Health check endpoint
handle /health {
    respond 200 {
        body "{\"status\":\"healthy\",\"service\":\"AI Drone Creator Website\"}"
        header Content-Type "application/json"
    }
}

# Все остальные запросы на index.html
handle {
    try_files {path} /index.html
    file_server
}
